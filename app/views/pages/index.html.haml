.row
  .col-sm-8.col-sm-offset-2
    %h3 Edit Page Order
    %ul#page-sort
      - @pages.each do |page|
        - cache(page) do
          = content_tag_for(:li, page, class: 'well') do
            = render partial: 'card', locals: { page: page }

.row.last-row
  .col-sm-8.col-sm-offset-2
    = link_to "Back to #{@book.title}", user_book_path(@user, @book), class: 'btn btn-warning'
