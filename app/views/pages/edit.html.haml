.col-sm-offset-2.col-sm-8
  %h3 Edit Page

  = form_for @page, url: {action: "update"} do |f|
    .field
      = f.label :text, 'Words'
      = f.text_area :text, class: 'form-control', autofocus: true, rows: 8
    .field
      = f.label :flickr_photo_id, 'Picture (Flickr Photo ID)'
      = f.number_field :flickr_photo_id, class: 'form-control'

    %button.btn.btn-warning{:type => "submit"} Update

  %h4 Photo Preview
  .photo-preview
    =image_tag @page.image_url(6)
