.row
  .col-sm-8.col-sm-offset-2
    %h3
      = current_user?(@user) ? "My Books" : "@#{@user.username}'s Books"

.row
  .col-sm-8.col-sm-offset-2
    = render partial: 'list', locals: { books: @books }

- if current_user?(@user)
  .row.new-book
    .col-sm-8.col-sm-offset-2
      = link_to 'Create a New Book', new_user_book_path(@user), class: 'btn btn-warning'
