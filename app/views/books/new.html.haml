.col-sm-offset-2.col-sm-8
  %h3 Set Up a New Book

  = form_for @book, url: {action: "create"} do |f|
    .field
      = f.label :title
      = f.text_field :title, class: 'form-control', autofocus: true
    .field
      = f.label :title_color
      = f.select :title_color, Book.title_colors, { }, class: 'form-control'

    %button.btn.btn-warning{:type => "submit"} Create
